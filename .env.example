# Database connection settings
# If DATABASE_URL is provided, it takes precedence over individual settings
DATABASE_URL=postgres://username:password@hostname:5432/database_name
PGHOST=hostname
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name

# OpenAI API key for receipt processing
OPENAI_API_KEY=your_openai_api_key

# SendGrid settings for email notifications (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_verified_sender_email@example.com

# Application URL for links in emails and other functionalities (optional)
APP_URL=https://your-app-url.com

# Session secrets - use a secure random string in production
SESSION_SECRET=your_secure_random_string_for_session_encryption

# Optional: OpenAI model selection
# Defaults to "gpt-4o" if not specified
OPENAI_MODEL=gpt-4o